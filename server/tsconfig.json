{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "noEmitOnError": false,
      "checkJs": true,
      "sourceMap": true,
      "esModuleInterop": true,  // Add this line
      "allowSyntheticDefaultImports": true  // This line is also recommended
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }